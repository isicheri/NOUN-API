generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(uuid())
  email      String     @unique
  password   String?
  role       Role       @default(STUDENT)
  createdAt  DateTime   @default(now())
  provider   String     @default("local")
  providerId String?    @unique
  cart       Cart[]
  download   Download[]
  orders     Order[]
  uploads    PDF[]      @relation("UploadedBy")
  profile    Profile?   @relation("userProfile")
}

model Profile {
  id      String  @id @default(uuid())
  userId  String  @unique
  name    String
  bio     String?
  rating  Float   @default(0.0)
  balance Float   @default(0.0)
  user    User    @relation("userProfile", fields: [userId], references: [id])
}

model PDF {
  id           String      @id @default(uuid())
  title        String
  description  String
  courseCode   String
  level        String
  price        Float       @default(0.0)
  fileKey      String
  uploadedById String
  createdAt    DateTime    @default(now())
  category     PdfCategory
  isFree       Boolean     @default(false)
  cartItems    CartItem[]
  downloads    Download[]
  orderItems   OrderItem[]
  uploadedBy   User        @relation("UploadedBy", fields: [uploadedById], references: [id])
}

model Order {
  id        String      @id @default(uuid())
  userId    String
  status    OrderStatus @default(PENDING)
  createdAt DateTime    @default(now())
  total     Float
  user      User        @relation(fields: [userId], references: [id])
  items     OrderItem[]
}

model OrderItem {
  id       String @id @default(uuid())
  orderId  String
  pdfId    String
  quantity Int    @default(1)
  price    Float
  order    Order  @relation(fields: [orderId], references: [id])
  pdf      PDF    @relation(fields: [pdfId], references: [id])
}

model News {
  id        String        @id @default(uuid())
  title     String
  category  NewsCategory  @default(NEWSUPDATE)
  images    String[]
  createdAt DateTime      @default(now())
  comment   NewsComment[]
}

model NewsComment {
  id        String   @id @default(uuid())
  text      String
  newsId    String
  createdAt DateTime @default(now())
  new       News     @relation(fields: [newsId], references: [id])
}

model Quotes {
  id        String   @id @default(uuid())
  text      String
  author    String
  createdAt DateTime @default(now())
}

model AcademicEvent {
  id        String   @id @default(uuid())
  title     String
  target    DateTime
  createdAt DateTime @default(now())
}

model Cart {
  id        String     @id @default(uuid())
  userId    String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  user      User       @relation(fields: [userId], references: [id])
  items     CartItem[]
}

model CartItem {
  id       String @id @default(uuid())
  cartId   String
  pdfId    String
  quantity Int    @default(1)
  cart     Cart   @relation(fields: [cartId], references: [id])
  pdf      PDF    @relation(fields: [pdfId], references: [id])

  @@unique([cartId, pdfId])
}

model Download {
  id           String   @id @default(uuid())
  userId       String
  pdfId        String
  downloadedAt DateTime @default(now())
  pdf          PDF      @relation(fields: [pdfId], references: [id], onDelete: Cascade)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([pdfId])
}

enum PdfCategory {
  PROJECT_SEMINAR
  COURSE_SUMMARY
  TMA_ARCHIVE
  PAST_QUESTIONS
  COURSE_MATERIAL
}

enum Role {
  STUDENT
  ADMIN
  STAFF
}

enum OrderStatus {
  PENDING
  PAID
  FAILED
}

enum NewsCategory {
  NEWSUPDATE
  GUIDES
  SCHOLARSHIP
}
